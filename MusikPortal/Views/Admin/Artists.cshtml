@model MusikPortal.Models.Artist
<div class=" card">
<form asp-controller="Admin" method="post">

    <div class="form-group ">
        <label>Artists</label>
        <select asp-for="Id" class="form-control card _c" asp-items="ViewBag.ArtistId"></select>
    </div>
    <br /><br />
