@model MusikPortal.Models.Song

<h1 class=" b1 b3 center c20">Confirm song deletion</h1>
<div class="center">
    <div class="card c77">
        <form asp-action="Delete" asp-controller="Admin" method="post" enctype="multipart/form-data">
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <span>Song's name  </span><br />
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <span>Album </span><br />
            <input asp-for="Album" class="form-control" readonly/>
            <div class="form-group">
                <label>Style</label>
                <input asp-for="style" class="form-control" readonly ></input>
            </div>
            <div class="form-group">
                <label>Artist</label>
                <input asp-for="artist" class="form-control" readonly></input>
            </div>
            <div class="form-group">
                <span>Year</span><br />
                <input asp-for="Year" class="form-control" readonly/>
            </div>            
            <span>File</span><br />
            <input asp-for="file" class="form-control"  readonly="readonly" />
                <br />
                <input type="submit" value="Delete Song" class="btn btn-primary c2" />            
        </form>
    </div>
</div>