@model MusikPortal.Models.Artist
<h4 class=" b1 b3 c20">Edit Artist</h4>
<div class=" card c7">
    <form asp-controller="Admin" method="post" enctype="multipart/form-data">
       
        <div class="form-group ">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span>enter the name </span><br />
                <input asp-for="Name" class="form-control card _c7" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <span>Photo</span><br />
            <input asp-for="photo" class="form-control card _c7" />
            <input type="file" name="p" accept=".jpg, .jpeg" /><br />           
        <div class="form-group">           
            <input type="submit" formaction="EditArtist" value="Edit Artist" class="btn btn-primary c2" />
        </div>
    </form>
</div>
