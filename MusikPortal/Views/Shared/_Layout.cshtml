<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusikPortal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GestBook.styles.css" asp-append-version="true" />
    <script src="~/js/site.js" ></script>
</head>
<body>
    <header >
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" >
            <div class="container-fluid" >
                <a class="navbar-brand card2" asp-area="" asp-controller="Home" asp-action="Index">MusikPortal</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @using Microsoft.AspNetCore.Http
                    @if (Context.Session.GetString("admin") != null)
                    {
                        <div class="navbar-collapse collapse d-sm-inline-flex c c1">
                        @using (Html.BeginForm("Styles", "Admin", FormMethod.Get))
                        {
                                <div >
                                    <input type="submit" value="Styles" />&nbsp;
                             </div>
                        }
                        @using (Html.BeginForm("Artists", "Admin", FormMethod.Get))
                        {
                            <div >
                                    <input type="submit" value="Artists" />&nbsp;
                            </div>
                        }
                        @using (Html.BeginForm("Create", "Song", FormMethod.Get))
                        {
                            <div >
                                    <input type="submit" value="AddSongs" />&nbsp;
                            </div>
                        }
                        @using (Html.BeginForm("Users", "Admin", FormMethod.Get))
                        {
                            <div >
                                    <input type="submit" value="Users" />&nbsp;
                            </div>
                        }
                        </div>
                    }
                    @if (Context.Session.GetString("login") != null)
                    {                       
                        @using (Html.BeginForm("Logout", "Login", FormMethod.Get))
                        {
                              <div class="navbar-collapse collapse d-sm-inline-flex c c1">
                                @if (Context.Session.GetString("admin") == null && Context.Session.GetString("level") != null)
                                    @using (Html.BeginForm("Create", "Song", FormMethod.Get))
                                    {
                                       <div>
                                           <input type="submit" value="AddSongs" />&nbsp;
                                       </div>
                                    }
                            <span style="margin-left:50px;">
                                Welcome, @Context.Session.GetString("login")&nbsp;&nbsp;
                            </span>
                            <div>
                                <input type="submit" value="Logout" />
                                </div>
                            </div>
                        }
                    }                   
                    else{ 
                    <ul class="navbar-nav flex-grow-1 c c1">
                        <li class="nav-item">
                            <a class="nav-link text-dark card2" asp-area="" asp-controller="Login" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark card2" asp-area="" asp-controller="Login" asp-action="Registration">Registration</a>
                        </li>
                    </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - MusikPortal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
