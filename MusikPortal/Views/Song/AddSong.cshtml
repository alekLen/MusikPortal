@model MusikPortal.Models.AddSong

<h1 class=" b1 b3">Add the Song</h1>

<div class="b1 b2">
    <div class="img ">
        <div class="b">
            <form asp-action="Create" asp-controller="Song" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <span>Name </span><br />
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div><br /><br />
                <div class="form-group">
                    <label >styles</label>
                    <select asp-for="StyleId" class="form-control" asp-items="ViewBag.StyleId"></select>
                    <span asp-validation-for="StyleId" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    <label >artists</label>
                    <select asp-for="ArtistId" class="form-control" asp-items="ViewBag.ArtistId"></select>
                    <span asp-validation-for="ArtistId" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    <span>Year</span><br />
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    <span>Text of the Song(otionaly)</span><br />
                    <textarea asp-for="text"></textarea>
                    <span asp-validation-for="text" class="text-danger"></span>
                </div><br />
                <span>file</span><br />
                <input type="file" name="uploadedFile" />
                <div class="form-group">
                    <br /><br />
                    <input type="submit" value="Add Song" class="btn btn-primary c2" />
                </div>
            </form>
        </div>
    </div>
</div>